  </style>
  
  </head>
  <body>
  <div class="container-xl">
      <div class="table-responsive">
          <div class="table-wrapper">
              <div class="table-title">
                  <div class="row">
                      <div class="col-sm-5">
                          <h2>Product <b>Management</b></h2>
                      </div>
                      <div class="col-sm-7">
                          <a href="/admin" class="btn btn-secondary"><i class="null"></i> <span>Back to dashboard</span></a>
                          <a href="/admin/add-product" class="btn btn-secondary"><i class="null"></i> <span>Add New Product</span></a>
                      </div>
                  </div>
              </div>          
              <table class="table table-striped table-hover">                
                  <thead>
                      <tr>
                          <th scope="col">#</th>
                          <th scope="col">brand</th>
                          <th scope="col">title</th>						
                          <th scope="col">description</th>
                          <th scope="col">price</th>
                          <th scope="col">category</th>
                          <th scope="col">stock</th>
                          <th scope="col">images</th>
                          <th scope="col">actions</th>                         
                      </tr>
                  </thead>
                  <tbody>
                    <% products.forEach((el,index)=>{%>
                    <tr id="<%= el._id %>">
                        <td><%=index +1%></td>
                        <td><a href="#"> <%=el.brand%></a></td>
                        <td><a href="#"> <%=el.title%></a></td>
                        <td><a href="#"> <%=el.description%></a></td>
                        <td><a href="#"> <%=el.price%></a></td>
                        <td><a href="#"> <%=el.category.title%></a></td>
                        <td><a href="#"> <%=el.stock%></a></td>
                        <td><img style="max-width: 150px; height: auto;"  src="<%= el.images %> " alt=""></td>
                        <td><a href="/admin/producteditpage?id=<%=el._id %>" class="btn btn-primary text-white">Edit</a></td>
                        <% if(el.access){ %> 
                        <td><a href="/admin/listing/<%=el._id%>" class="btn btn-danger text-white">block</a></td>
                        <% }else{ %> 
                            <td><a href="/admin/unlisting/<%=el._id%> " class="btn btn-danger text-white">unblock</a></td>
                            <% } %>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
          </div>
      </div>
                  

  </div>

  <script>
      
      $(document).ready(function(){
          $('[data-toggle="tooltip"]').tooltip();
      });

      function deleteCategory(categoryId){
          const swalWithBootstrapButtons = Swal.mixin({
customClass: {
  confirmButton: 'btn btn-success',
  cancelButton: 'btn btn-danger'
},
buttonsStyling: false
})

swalWithBootstrapButtons.fire({
title: 'Are you sure?',
text: "You won't be able to revert this!",
icon: 'warning',
showCancelButton: true,
confirmButtonText: 'Yes, delete it!',
cancelButtonText: 'No, cancel!',
reverseButtons: true
}).then((result) => {
if (result.isConfirmed) {
  axios.delete("/admin/deletecategory?id="+categoryId).then((res=>{
              console.log("delete? ",res);
              if(res.data.delete){
                 document.getElementById(categoryId).remove()
              }             
          }))
  swalWithBootstrapButtons.fire(
    'Deleted!',
    'Your file has been deleted.',
    'success'
  )
} else if (
  result.dismiss === Swal.DismissReason.cancel
) {
  swalWithBootstrapButtons.fire(
    'Cancelled',
    'Your imaginary file is safe :)',
    'error'
  )
}
})
         
      }
      </script>
           
  