    <body>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper ml-5 mt-5 ">
                <div class="table-title ml-5 mr-5">
                    <div class="row">
                        <div class="col-sm-5">
                            <h2>Order <b>Management</b></h2>
                        </div>
                        <div class="col-sm-7">
                            <a href="/admin" class="btn btn-secondary"><i class="null"></i> <span>Back to dashboard</span></a>
                            
                        </div>
                    </div>
                </div>
             
                <table class="table table-striped table-hover ml-5" id="userTable">
                    <div class="gap mb-5 mt-5">
                        
                    <thead>
                        <tr>
                    
                            <th scope="col">Date Purchased</th>
                            <th scope="col">Status</th>						
                            <th scope="col">Total</th>
                       
                         
                            
                        </tr>
                    </thead>
            </div>
                    <tbody>
                     <!-- < % order.forEach((el,index)=>{ %> -->
                      
                 
                    
                           <% order.forEach(el=> { %>
    
                            <% if (el.orderStat=='Canceled' ) {%>
                              <tr id="<%= el._id %>reaload">
                                <td class="py-3"><a class="nav-link-style fw-medium fs-sm" href="#order-details<%= el._id %>"
                                    data-bs-toggle="modal">
                                    <%= element.createdAt.toLocaleString() %>
                                  </a></td>
          
                                <td class="py-3">
                                  <span class="badge bg-danger m-1 p-1">
                                    <%= el.orderStat %>
                                  </span>
                                </td>
                                <td class="py-3">₹ <%= el.totalPrice %>
                                </td>
                                <td class="py-3 align-middle">
                                  <a class="btn bg-faded-info btn-icon  me-2"
                                    href="#order-details<%= el._id %>" data-bs-toggle="modal" title="Quick View"><i
                                      class="ci-eye pe-1"></i>view</a>
                                      <button class="btn bg-danger btn-icon  text-white" disabled
                                        data-bs-toggle="tooltip" title="Cancel">
                                        <%= el.orderStat %>
                                      </button>
                                </td>
                              </tr>
                              <!-- href="/admin/invoice?id=<%= el._id%>" -->
                              <%} else if( el.orderStat == 'Delivered'){%>
          
                                <tr id="<%= el._id %>reaload">
                                  <td class="py-3"><a class="nav-link-style fw-medium fs-sm" 
                                      data-bs-toggle="modal">
                                      <%= el.createdAt.toLocaleString() %>
                                    </a></td>
            
                                  <td class="py-3">
        
                                    <span class="badge bg-success m-1 p-1">
                                      <%= el.orderStat %>
                                    </span>
                                  </td>
                                  <td class="py-3">₹ <%= el.totalPrice %>
                                  </td>
                                  <td class="py-3 align-middle">
                                    <a class="btn bg-faded-info btn-icon  me-2"
                                    href="#order-details<%= el._id %>" data-bs-toggle="modal" title="Quick View"><i
                                        class="ci-eye pe-1"></i>view</a>
                                        <button class="btn bg-success btn-icon  text-white" disabled
                                          data-bs-toggle="tooltip" title="Cancel">
                                          <%= el.orderStat %>
                                        </button>
                                  </td>
                                </tr>
                                
                              <%} else {%>
          
                                <tr id="<%= el._id %>reaload">
                                  <td class="py-3"><a class="nav-link-style fw-medium fs-sm"
                                      href="#order-details<%= el._id %>" data-bs-toggle="modal">
                                      <%= el.createdAt.toLocaleString() %>
                                    </a></td>
          
                                  <td class="py-3"> 
                                   <% if(el.orderStat == "'cancelled'" || el.orderStat == 'Delivered'){ %>
                                    <p class=" bg-white text-danger " ><%= el.orderStat %></p>
                                    
                                    
                                    <% }else { %>
                                    <select class="form-select bg-dark text-white"  onchange="changests('<%= el._id%>',this)">
                                    <option value="<%= el.orderStat %>"><%= el.orderStat %> </option>
                                    <option value="Confirmed" >Confirmed</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Delivered">Delivered</option>
                                  </select></td>
                                    <% } %>
                                  <td class="py-3">₹ <%= el.totalPrice %>
                                  </td>
                                  <td class="py-3 align-middle"><button data-bs-target="#order-details<%= el._id %>" class="btn bg-faded-info btn-icon  me-2"
                                       data-bs-toggle="modal" title="Quick View"><i
                                        class="ci-eye pe-1"></i>view</button>
                                        <% if(el.orderStat === "'cancelled"){ %>
                                            <button class="btn bg-faded-danger btn-icon  text-danger " href="/admin/cancelOrder?id=<%= el._id %>&status='cancelled'" value="Canceled"
                                                data-bs-toggle="tooltip" title="Cancel" >
                                                Cancelled <div class="ci-trash"></div></button>
                                            <% }else{ %>
                                                <a class="btn bg-faded-danger btn-icon  text-danger" href="/admin/cancelOrder?id=<%= el._id %>&status='cancelled'" value="Canceled"
                                                  data-bs-toggle="tooltip" title="Cancel">
                                                  Cancel <div class="ci-trash"></div>
                                                </a>
                                                  <% } %>
            
                                  </td>
                                </tr>
                                <%} %>
                        <% }); %>
          
                  </tbody>
                </table>
             
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.jsF"></script>
        <script>
           
            const changests = (orderId, status) =>{
               console.log(`id: ${orderId} status: ${status.value}`);
               $.ajax({
                url: `/admin/orderStatus`,
                method: 'POST',
                encoded:true,
                dataType:"json",
                data:{
                    orderId:orderId,
                    status:status.value
                }
               }).done((data)=>{
                console.log(data)
               })
            }
           
          </script>
          <%order.forEach(el=>{%>
            <div class="modal fade" id="order-details<%= el._id %>">
              <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title">Order Details </h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body pb-0">
                    <%el.items.forEach(order=>{%>
                      <!-- Item--> 
                      <div class="d-sm-flex justify-content-between mb-4 pb-3 pb-sm-2 border-bottom">
                        <div class="d-sm-flex text-center text-sm-start"><a class="d-inline-block flex-shrink-0 mx-auto"
                            href="" style="width: 10rem;"><img class="rounded"
                              src="<%=order.productId.images%>" alt="Product Image"></a>
                          <div class="ps-sm-4 pt-2">
                            <h3 class="product-title fs-base mb-2"><a href=>
                                <%=order.productId.brand %>
                              </a></h3>
                            <div class="fs-sm"><span class="text-muted me-2">Title:</span>
                              <%= order.productId.title %>
                            </div>
                            <div class="fs-lg text-accent pt-2">₹ <%= order.productId.price %>
                            </div>
                          </div>
                        </div>
                        <div class="pt-2 ps-sm-3 mx-auto mx-sm-0 text-center">
                          <div class="text-muted mb-2">Quantity:</div>
                          <%= order.qty %>
                        </div>
                        <div class="pt-2 ps-sm-3 mx-auto mx-sm-0 text-center">
                          <div class="text-muted mb-2">Subtotal</div>₹ <%= order.productId.price*order.qty %>
                        </div>
                      </div>
                      <!-- Item-->
                      <%})%>
                        <!-- Footer-->
                      </div>
                        <div class="modal-footer flex-wrap justify-content-between bg-secondary fs-md">
                          <div class="px-2 py-1"><span class="text-muted">Total:&nbsp;</span><span class="fs-xl"> ₹ <%=el.totalPrice %> </span></div>
                        </div>
                      </div>
                </div>
              </div>
            </div>
          <%})%>
  
  
    